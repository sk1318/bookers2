<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
     <header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="/"><span>Bookers</span></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
          
            <% if user_signed_in? %>
            <li class="nav-item px-2 ">
               <%= link_to  user_path(current_user.id),class: "text-light" do %>
               <i class="fas fa-home">Home</i>
               <% end %>
            </li>
            <li class="nav-item px-2">
              <%= link_to users_path,class: "text-light" do %>
              <i class ="fas fa-users">Users</i>
              <% end %>
            </li>
            <li class="nav-item px-2">
              <%= link_to books_path,class: "text-light" do %>
              <i class="fas fa-book-open">Books</i>
              <% end %>
            </li>
            <li class="nav-item px-2">
            <%= link_to  destroy_user_session_path, method: :delete,class: "text-light" do %>
            <i class="fas fa-sign-out-alt">logout</i>
            <% end %>
            </li>
            <% else %>
            <li class="nav-item px-2">
              <%= link_to  root_path ,class: "text-light" do %>
              <i class="fas fa-home">Home</i>
              <% end %>
            </li>
            <li class="nav-item px-2">
             <%= link_to  about_path ,class: "text-light" do%>
             <i class ="fas fa-link">About</i>
             <% end %>
            </li>
            <li class="nav-item px-2">
             <%= link_to new_user_registration_path,class: "text-light" do %>
             <i class="fas fa-user-plus">sign up</i>
             <% end %>
            </li>
            <li class="nav-item px-2">
             <%= link_to  new_user_session_path,class: "text-light" do%>
             <i class="fas fa-sign-in-alt">login</i>
             <% end %>
            </li>
            <% end %>
            
        </ul>
      </div>
    </div>
  </nav>
</header>
<% flash.each do |type,message| %>
<p class="<%= type %>"><%= message %></p>
<% end %>
    <%= yield %>
<footer>
  <div class='container mt-5'>
  	<div class='row'>
    	<div class='mx-auto'>
    		<p>CopyRight Infratop.inc</p>
    	</div>
    </div>
  </div>
</footer>
  </body>
</html>
